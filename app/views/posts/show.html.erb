<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.Title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.Content %>
</p>

<p>
  <strong>User:</strong>
  by <%= @post.user.email %>
</p>

